const unlockUser = async (userId) => {
  const user = await db.collection('users').doc(userId).get();
  const lockedAt = user.data().lockedAt;
  const now = Date.now();

  // à¸›à¸¥à¸”à¸¥à¹‡à¸­à¸à¸­à¸±à¸•à¹‚à¸™à¸¡à¸±à¸•à¸´à¸«à¸¥à¸±à¸‡ 15 à¸™à¸²à¸—à¸µ
  if (now - lockedAt > 15 * 60 * 1000) {
    await db.collection('users').doc(userId).update({ locked: false });
  }
};
