const maybeUnlock = async (userId) => {
  const user = await db.collection('users').doc(userId).get();
  const attempts = user.data().failedAttempts;

  if (attempts >= 3) {
    const lucky = Math.random() < 0.3; // à¹‚à¸­à¸à¸²à¸ª 30%
    if (lucky) {
      await db.collection('users').doc(userId).update({ locked: false });
      return 'à¹‚à¸Šà¸„à¹€à¸‚à¹‰à¸²à¸‚à¹‰à¸²à¸‡à¸„à¸¸à¸“! à¸£à¸°à¸šà¸šà¸›à¸¥à¸”à¸¥à¹‡à¸­à¸à¹ƒà¸«à¹‰à¹à¸¥à¹‰à¸§';
